<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_above="@+id/unlockPremium"
    android:layout_marginTop="5dp"
    android:paddingEnd="@dimen/drawer_item_margin"
    android:paddingLeft="@dimen/drawer_item_margin"
    android:paddingRight="@dimen/drawer_item_margin"
    android:paddingStart="@dimen/drawer_item_margin">

    <ImageView
        android:id="@+id/imageDrawerItem"
        android:layout_width="@dimen/drawer_item_icon_width"
        android:layout_height="@dimen/drawer_item_icon_width"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/drawer_item_margin"
        android:layout_marginStart="@dimen/drawer_item_margin"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_rate_white"
        />

    <TextView
        android:id="@+id/textDrawerItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/drawer_item_text_margin"
        android:layout_marginStart="@dimen/drawer_item_text_margin"
        android:layout_toEndOf="@+id/imageDrawerItem"
        android:layout_toRightOf="@+id/imageDrawerItem"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/rate_us"
        android:textSize="14sp" />

</RelativeLayout>