<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DialogTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">@dimen/margin_16</item>
        <item name="android:layout_marginStart">@dimen/margin_16</item>
        <item name="android:layout_marginEnd">@dimen/margin_16</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogMessage">
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginLeft">@dimen/margin_16</item>
        <item name="android:layout_marginRight">@dimen/margin_16</item>
        <item name="android:layout_marginTop">@dimen/margin_16</item>
        <item name="android:layout_marginBottom">@dimen/margin_16</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="DialogPositiveButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/blue</item>
        <item name="android:layout_marginStart">@dimen/margin_16</item>
        <item name="android:layout_marginEnd">@dimen/margin_16</item>
    </style>

    <style name="DialogNegativeButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorAccent</item>
        <!--<item name="android:layout_marginLeft">@dimen/margin_16</item>-->
        <item name="android:layout_marginRight">@dimen/margin_16</item>
    </style>

    <style name="DialogNeutralButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/blue</item>
        <item name="android:layout_marginLeft">@dimen/margin_16</item>
        <item name="android:layout_marginRight">@dimen/margin_16</item>
    </style>
</resources>